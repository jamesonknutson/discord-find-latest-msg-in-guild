{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "noErrorTruncation": true,
    "outDir": "dist",
    "strict": true,
    "target": "ES2015",
    "skipLibCheck": true
  },
  "include": [ "src" ],
  "exclude": [ "node_modules", "dist" ]
}